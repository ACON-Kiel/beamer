% The default box color.  The user is expected to override this.
\setbeamercolor{aconboxes}{bg=structure!15!normal text.bg,fg=black}

\newenvironment{displaybox}[1]
{
  \centerline\bgroup\hfill
  \begin{beamerboxesrounded}[lower=aconboxes,shadow=false,width=#1]{}
}
{
  \end{beamerboxesrounded}\hfill\egroup
}

\newenvironment{inlinebox}[1]
{
  \newbox\@mybox
  \newdimen\@myboxht
  \setbox\@mybox\hbox\bgroup%
  \begin{beamerboxesrounded}[lower=aconboxes,shadow=false,width=#1]{}
    %\abovedisplayskip=-1ex
}
{
  \end{beamerboxesrounded}\egroup
  \@myboxht\ht\@mybox
  \raisebox{-0.25\@myboxht}{\usebox\@mybox}%\hspace{2pt}
}

\newenvironment{alignbox}[1]
{
  \newbox\@mybox
  \newdimen\@myboxht
  \setbox\@mybox\hbox\bgroup%
    \begin{beamerboxesrounded}[lower=aconboxes,shadow=false,width=#1]{}
      \abovedisplayskip=-1ex
}
{
  \end{beamerboxesrounded}\egroup
  \@myboxht\ht\@mybox
  \raisebox{-0.25\@myboxht}{\usebox\@mybox}\hspace{2pt}
}

